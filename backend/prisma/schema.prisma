generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CardColumn {
    TODO
    IN_PROGRESS
    DONE
}

model Board {
    id        String   @id @default(uuid()) //uuid for 'hashed' id
    name String @default("New Board")
    cards Card[]
}

model Card {
    id String @id @default(uuid())
    title String @default("New Card")
    description String @default("Your card description")
    order Int 
    column CardColumn @default(TODO)
    board Board @relation(fields: [boardId], references: [id], onDelete: Cascade)
    boardId String
}